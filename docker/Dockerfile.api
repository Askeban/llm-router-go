FROM golang:1.22 AS build
WORKDIR /app
COPY go.mod ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/llm-router ./cmd/server
FROM gcr.io/distroless/base-debian12
WORKDIR /app
COPY --from=build /out/llm-router /usr/local/bin/llm-router
COPY configs /app/configs
ENV PORT_DEFAULT=8080 CLASSIFIER_URL=http://classifier:5000 SQLITE_PATH=/app/data/router.db MODEL_PROFILES_PATH=/app/configs/models.json
EXPOSE 8080
ENTRYPOINT ["/usr/local/bin/llm-router"]
